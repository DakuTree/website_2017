aside(class="info aside section")
	div(class="section-inner", style="padding: 20px")
		h2(class="heading sr-only")="Basic Information"
		div(class="content")
			ul(class="list-unstyled")
				li
					i(class="fa fa-map-marker")
					span(class="sr-only")="Location:"
					=resumeProfile.location
				if resumeProfile.social.phone !== ''
					li(class="print-only")
						i(class="fa fa-phone")
						span(class="sr-only")="Phone:"
						=resumeProfile.social.phone
				li
					i(class="fa fa-envelope-o")
					span(class="sr-only")="Email:"
					a(href="mailto:"+resumeProfile.social.email)=resumeProfile.social.email
				if resumeProfile.social.blog !== ''
					li
						i(class="fa fa-link")
						span(class="sr-only")="Blog:"
						a(href=resumeProfile.social.blog)=resumeProfile.social.blog
